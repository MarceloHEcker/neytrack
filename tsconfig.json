{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "paths": {
      "~/constants/*": [
        "./src/constants/*"
      ],
      "~/models/*": [
        "./src/models/*"
      ],
      "~/repositories/*": [
        "./src/repositories/*"
      ],
      "~/services/*": [
        "./src/services/*"
      ],
      "~/use-cases/*": [
        "./src/use-cases/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ],
      "~/factories/*": [
        "./src/factories/*"
      ],
      "~/adapters/*": [
        "./src/adapters/*"
      ],
      "~/database/*": [
        "./src/database/*"
      ],
      "~/admin/*": [
        "./src/admin-api/*"
      ],
    },
  },
  "include": [
    "src"
  ]
}