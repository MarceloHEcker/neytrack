{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "jest"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "~/constants/*": [
        "./src/constants/*"
      ],
      "~/models/*": [
        "./src/models/*"
      ],
      "~/repositories/*": [
        "./src/repositories/*"
      ],
      "~/services/*": [
        "./src/services/*"
      ],
      "~/use-cases/*": [
        "./src/use-cases/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
}